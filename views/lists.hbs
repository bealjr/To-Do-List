

<section class="sectionLists">
  <h1>My lists<i class='fa fa-plus' title="New List"></i></h1>
  <form class="" action="/lists/addList" method="post">
    <input type="text" name="inputAddList" placeholder= "Add new list" id="inputAddListTask" autofocus>
    <button type="submit" name="buttonAddList" id="buttonAddList" hidden>submit</button>
  </form>
  <ul>
    {{#each listTitles}}
    <li>
      <span class="span-trash hoverSpan"><i class="fa fa-trash" title="Delete list"></i></span>
      <span class="span-pencil hoverSpan"><i class="fa fa-pencil" aria-hidden="true" title="Edit list name"></i></span>
      <a href="/lists/{{email}}/{{name}}">{{name}}</a>
      <form class="hiddenTasks formDeleteList" action="/lists/deleteList?_method=DELETE" method="post">
        <input type="text" name="inputDeleteListName" value="{{name}}" hidden>
        <button type="submit" name="buttonDeleteList" class="buttonDeleteList" id="buttonDeleteList" hidden>Delete</button>
      </form>

      <form class="hiddenTasks formEditListName" action="/lists/editListName?_method=PUT" method="post">
        <input type="text" name="originalListName" value="{{name}}" class="originalListName" hidden>
        <input type="text" name="inputEditListName" value="{{name}}" class="inputEditListName" hidden>
        <button type="submit" name="buttonEditListName" class="buttonEditListName" id="buttonEditListName" hidden></button>
      </form>
    </li>
    {{/each}}
  </ul>
</section>

<script type="text/javascript" src="/js/todos.js"></script>
